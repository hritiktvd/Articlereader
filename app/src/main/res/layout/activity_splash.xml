<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--gravity is used to float tha objects-->
    <!--android:gravity sets the gravity of the contents (i.e. its subviews)
    of the View it's used on.
    android:layout_gravity sets the gravity of the View or Layout relative to its parent. -->


    <!--Image tag. Copy the image and paste it in the drawable folder directly
    by right clicking it and clicking paste. (dont use ctrl c and v) -->

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Article Reader"
        android:textColor="#535353"
        android:textSize="20dp" />

</LinearLayout>