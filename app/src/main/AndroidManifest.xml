<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hritik.articlereader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/articlereader"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/articlereader_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme_noactionbar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".Hamburger_menu"
            android:label="@string/title_activity_hamburger_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_noactionbar.NoActionBar" />
        <activity
            android:name=".WelcomeScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Signup"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Article_main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".live.Live_news"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

    </application>

</manifest>